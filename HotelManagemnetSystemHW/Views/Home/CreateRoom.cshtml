@model HotelManagemnetSystemHW.Models.Room


<form method="post">
    <div>
        <p>
            <label asp-for="Name"></label><br />
            <input type="text" id="Name" name="Name" asp-for="Name" />
            <span asp-validation-for="Name" />

        </p>
        <p>
            <label asp-for="Description"></label><br />
            <input id="Description" name="Description" asp-for="Description" />
            <span asp-validation-for="Description" />

        </p>
        <p>
            <label asp-for="PersonCount"></label><br />
            <input type="number" id="PersonCount" name="PersonCount" asp-for="PersonCount" />
            <span asp-validation-for="PersonCount" />

        </p>
        <p>
            <label asp-for="Square"></label><br />
            <input type="number" id="Square" name="Square" asp-for="Square" />
